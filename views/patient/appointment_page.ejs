<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Village Health - Appointments</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --primary-color: #17a2b8;
      --sidebar-bg: #f8f9fa;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }

    .sidebar {
      min-height: 100vh;
      background: var(--sidebar-bg);
      border-right: 1px solid #dee2e6;
    }

    .sidebar .nav-link {
      color: #6c757d;
      padding: 0.75rem 1rem;
      border-radius: 8px;
      margin: 4px 0;
    }

    .sidebar .nav-link.active {
      background: var(--primary-color);
      color: white;
    }

    .stat-card {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      border: 1px solid #e9ecef;
    }

    .appointment-card {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      border: 1px solid #e9ecef;
    }

    .badge-scheduled {
      background: #e7f6f8;
      color: var(--primary-color);
      padding: 4px 12px;
      border-radius: 6px;
      font-size: 0.75rem;
    }

    .badge-video {
      background: #e7f6f8;
      color: var(--primary-color);
      padding: 4px 8px;
      border-radius: 6px;
      font-size: 0.75rem;
    }

    .badge-inperson {
      background: #f0f0f0;
      color: #6c757d;
      padding: 4px 8px;
      border-radius: 6px;
      font-size: 0.75rem;
    }

    .btn-view {
      background: var(--primary-color);
      color: white;
      border: none;
      padding: 8px 20px;
      border-radius: 8px;
    }

    .btn-view:hover {
      background: #138496;
      color: white;
    }
  </style>
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <%- include('./partials/Menubar') %>

        <!-- Main Content -->
        <div class="col-md-10 p-4">
          <!-- Header -->
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h3>Appointments</h3>
            <div class="d-flex gap-3 align-items-center">
              <i class="bi bi-globe fs-5"></i>
              <div class="position-relative">
                <i class="bi bi-bell fs-5"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">1</span>
              </div>
              <i class="bi bi-list fs-4"></i>
            </div>
          </div>

          <!-- Stats -->
          <div class="row mb-4">
            <div class="col-md-3">
              <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <p class="text-muted mb-1">Total Appointment</p>
                    <h2 class="mb-0">
                      <%= appointment.length %>
                    </h2>
                  </div>
                  <i class="bi bi-calendar3 text-info fs-3"></i>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <p class="text-muted mb-1">Today</p>
                    <h2 class="mb-0">--</h2>
                  </div>
                  <i class="bi bi-clock text-info fs-3"></i>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <p class="text-muted mb-1">Video Calls</p>
                    <h2 class="mb-0">--</h2>
                  </div>
                  <i class="bi bi-camera-video text-info fs-3"></i>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <p class="text-muted mb-1">In-person</p>
                    <h2 class="mb-0">--</h2>
                  </div>
                  <i class="bi bi-person text-info fs-3"></i>
                </div>
              </div>
            </div>
          </div>

          <!-- Search and Filters -->
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control border-start-0"
                  placeholder="Search by patient name, village, or doctor...">
              </div>
            </div>
            <div class="col-md-6 text-end">
              <select class="form-select d-inline-block w-auto me-2">
                <option>All Modes</option>
              </select>
              <select class="form-select d-inline-block w-auto">
                <option>All Dates</option>
              </select>
            </div>
          </div>

          <!-- Appointments List -->
          <% if (appointment && appointment.length> 0) { %>
            <% appointment.forEach(function(apt) { %>
              <div class="appointment-card">
                <div class="row align-items-center">
                  <div class="col-md-6">
                    <div class="d-flex align-items-start">
                      <div class="bg-light rounded-circle p-3 me-3">
                        <i class="bi bi-person fs-4 text-info"></i>
                      </div>
                      <div>
                        <h5 class="mb-1">
                          <%= apt.fullName %>
                        </h5>
                        <p class="text-muted small mb-2">
                          <%= apt.age %> years • <%= apt.gender %> • <%= apt.village %>
                        </p>
                        <p class="mb-0 text-muted">
                          <%= apt.symptoms %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <span class="badge-scheduled me-2">
                          <%= apt.status %>
                        </span>
                        <p class="mt-2 mb-0 small"><i class="bi bi-calendar3"></i>
                          <%= apt.createdAt.toDateString() %>
                        </p>
                        <p class="mb-0 small text-muted">
                          <%= apt.assignedDoctor ? apt.assignedDoctor.name : 'Not Assigned' %>
                        </p>
                      </div>
                      <a href="/patient/appointment/<%= apt._id %>" class="btn btn-view">View Details</a>
                    </div>
                  </div>
                </div>
              </div>
              <% }); %>
                <% } else { %>
                  <div class="text-center text-muted py-5">
                    <i class="bi bi-calendar-x fs-1 d-block mb-3"></i>
                    <p>No appointment found.</p>
                  </div>
                  <% } %>
        </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>