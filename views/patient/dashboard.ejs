<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Village Health Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    .sidebar {
      min-height: 100vh;
      background-color: #f8f9fa;
      padding: 1.5rem 0;
    }

    .sidebar .nav-link {
      color: #495057;
      padding: 0.75rem 1.5rem;
      margin: 0.25rem 0;
    }

    .sidebar .nav-link:hover {
      background-color: #e9ecef;
    }

    .logo {
      padding: 0 1.5rem 1.5rem;
    }

    .logo-icon {
      width: 40px;
      height: 40px;
      background-color: #17a2b8;
      border-radius: 8px;
    }

    .welcome-card {
      background-color: #d1ecf1;
      border: none;
      border-radius: 8px;
    }

    .action-btn {
      padding: 2.5rem 1rem;
      border-radius: 8px;
      border: none;
      text-align: center;
    }

    .btn-primary-custom {
      background-color: #17a2b8;
      color: white;
    }

    .appointment-card,
    .prescription-card {
      border: 1px solid #dee2e6;
      border-radius: 8px;
      padding: 1rem;
      margin-bottom: 0.75rem;
    }

    .badge-video {
      background-color: #cfe2ff;
      color: #084298;
    }

    .badge-followup {
      background-color: #cff4fc;
      color: #055160;
    }

    .notification-item {
      border-left: 3px solid #17a2b8;
      padding-left: 1rem;
    }
  </style>
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('./partials/Menubar') %>

        <!-- Main Content -->
        <div class="col-md-10 p-4">
          <!-- Header -->
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">ZenHeal Portal</h4>
            <div>
              <button class="btn btn-link"><i class="bi bi-globe"></i></button>
              <button class="btn btn-link position-relative">
                <i class="bi bi-bell"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">1</span>
              </button>
              <button class="btn btn-link"><i class="bi bi-translate fs-4"></i>
                 
                </button>
                 <!-- <div class="translate-container " >
                    <%- translateSnippet %>
                  </div> -->

            </div>
          </div>

          <!-- Welcome Card -->
          <div class="card welcome-card mb-4">
            <div class="card-body">
              <h5>Welcome,<%=user.fullName%>! ðŸ‘‹</h5>
              <p class="mb-0 text-muted">Here's what's happening with your patients today.</p>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="row mb-4">
            <div class="col-md-4">
              <a href="/patient/consultation" class="btn action-btn btn-primary-custom w-100">
                <i class="bi bi-chat-dots d-block fs-3 mb-2"></i>
                Start Consultation
              </a>
            </div>

            <div class="col-md-4">
              <a href="/patient/add_patient" class="btn action-btn bg-light w-100">
                <i class="bi bi-person-plus d-block fs-3 mb-2"></i>
                Add Patient
              </a>
            </div>

            <div class="col-md-4">
              <a href="/patient/prescriptions" class="btn action-btn bg-light w-100">
                <i class="bi bi-file-text d-block fs-3 mb-2"></i>
                My Prescriptions
              </a>
            </div>
          </div>


          <!-- Appointments and Prescriptions -->
          <div class="row">
            <!-- Upcoming Appointments -->
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><i class="bi bi-calendar-check text-info me-2"></i> Upcoming Appointments
                  </h5>
                  <p class="text-muted small">You have 3 appointments today</p>

                  <div class="appointment-card">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <strong>Ramesh Kumar</strong>
                        <div class="text-muted small"><i class="bi bi-clock me-1"></i> 10:00 AM</div>
                      </div>
                      <span class="badge badge-video">Video Call</span>
                    </div>
                  </div>

                  <div class="appointment-card">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <strong>Priya Sharma</strong>
                        <div class="text-muted small"><i class="bi bi-clock me-1"></i> 2:30 PM</div>
                      </div>
                      <span class="badge badge-followup">Follow-up</span>
                    </div>
                  </div>

                  <div class="appointment-card">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <strong>Anil Patel</strong>
                        <div class="text-muted small"><i class="bi bi-clock me-1"></i> 4:00 PM</div>
                      </div>
                      <span class="badge badge-video">Video Call</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Recent Prescriptions -->
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><i class="bi bi-prescription2 text-info me-2"></i> Recent Prescriptions</h5>
                  <p class="text-muted small">Latest prescriptions issued</p>

                  <div class="prescription-card">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <strong>Meera Singh</strong>
                        <div class="text-muted small">Today</div>
                      </div>
                      <div class="text-end">
                        <div class="small">3 medicines</div>
                        <a href="#" class="text-info small">View</a>
                      </div>
                    </div>
                  </div>

                  <div class="prescription-card">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <strong>Suresh Reddy</strong>
                        <div class="text-muted small">Yesterday</div>
                      </div>
                      <div class="text-end">
                        <div class="small">2 medicines</div>
                        <a href="#" class="text-info small">View</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Recent Notifications -->
          <div class="row mt-4">
            <div class="col-12">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title mb-4">Recent Notifications</h5>

                  <div class="notification-item mb-3">
                    <div class="d-flex justify-content-between">
                      <div>
                        <strong>New appointment request from Lakshmi Devi</strong>
                        <div class="text-muted small">5 mins ago</div>
                      </div>
                    </div>
                  </div>

                  <div class="notification-item mb-3">
                    <div class="d-flex justify-content-between">
                      <div>
                        <strong>Prescription ready for pickup - Rajesh Kumar</strong>
                        <div class="text-muted small">1 hour ago</div>
                      </div>
                    </div>
                  </div>

                  <div class="notification-item">
                    <div class="d-flex justify-content-between">
                      <div>
                        <strong>Video consultation starts in 30 minutes</strong>
                        <div class="text-muted small">2 hours ago</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
  <script>
    // highlight both sidebar and dashboard buttons
    const currentPath = window.location.pathname;

    // sidebar active
    document.querySelectorAll('.sidebar .nav-link').forEach(link => {
      if (link.getAttribute('href') === currentPath) {
        link.classList.add('active');
      }
    });

    // action buttons active
    document.querySelectorAll('.action-btn').forEach(btn => {
      if (btn.getAttribute('href') === currentPath) {
        btn.classList.add('active');
      }
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>